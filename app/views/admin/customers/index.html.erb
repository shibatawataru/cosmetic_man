<div class="row my-5">
  <div class="col-3">
  </div>
  <div class="col-3 pl-5">
    <h2 class="d-flex align-items-center justify-content-center">会員一覧</h2>
  </div>
  <div class="col-6">
  </div>
</div>

<div class="row">
  <div class="col-4">
  </div>
  <div class="col-4">
    <table class="table table-hover">
      <thead>
        <tr>
          <th>会員ID</th>
          <th>氏名</th>
          <th>メールアドレス</th>
        </tr>
      </thead>
      <tbody>
        <% @customers.each do |customer| %>
          <tr>
            <td><%= customer.id %></td>
            <td><%= link_to customer.name, admin_customer_path(customer.id) %>
            <td><%= customer.email %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  <div class="col-4">
  </div>
</div>