<div class="row my-5">
 <div class="col-4">
 </div>
  <div class="col-4">
   <h3 class="bg-light w-75 text-center">
    <%= @customer.name %>さんの会員情報編集
   </h3>
  </div>
  <div class="col-4">
  </div>
</div>
<div class="row">
 <div class="col-3">
 </div>
  <div class="col-5 d-flex align-items-center justify-content-center">
   <%= form_with url: admin_customer_path(@customer), model: @customer, method: :patch do |f| %>
    <table class="table">
     <tr>
      <th>名前</th>
      <td><%= f.text_field :name, autofocus: true, class:"form-control", placeholder:"名前" %></td>
     </tr>
     <tr>
      <th>メールアドレス</th>
      <td><%= f.email_field :email, autofocus: true, autocomplete: "email", class:"form-control", placeholder:"Email" %></td>
     </tr>
     <tr>
      <th>会員ステータス</th>
      <td>
        <%= f.radio_button :is_deleted, "false" %>
        <%= f.label :有効, class:"mr-3"%>
        <%= f.radio_button :is_deleted, "true" %>
        <%= f.label :退会 %>
      </td>
     </tr>
    </table>
     <%= f.submit '編集内容を保存', class:"btn btn-outline-info" %>
   <% end %>
  </div>
 <div class="col-4">
 </div>
</div>