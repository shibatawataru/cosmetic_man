<div class='container'>
 <div class="row">
  <h1>商品一覧（ 全 <%= @quantity %> 件 ）</h1>
  <div>
  
  <!--タグリスト-->
  <% @tag_list.each do |list|%>
  <%=list.name %>
  <%="(#{list.items.count})" %><% end %>
  </div>

  <table class='table'>
    <thead>
      <tr>
        <th>商品画像<th>
        <th>商品名</th>
        <th>ジャンル</th>
        <th>商品価格</th>
        <th>評価</th>
      </tr>
    </thead>
    <tbody>
     <% @items.each do |item| %>
      <tr>
        <td><%= link_to admin_item_path(item.id) do %>
          <%= image_tag item.get_product_image(200,200)%>
          <% end %></td>
        <td><%= item.itemname %></td>
        <td><i class="fas fa-tag"><%= item.tags.map(&:name).join(', ') %></i></td>
        <td><%= item.price %>円</td>
        <td class="item-evaluation-<%= item.id %>" data-score="<%= item.evaluation %>">
        <script>
        $('.item-evaluation-<%= item.id %>').empty();
        $('.item-evaluation-<%= item.id %>').raty({
          readOnly: true,
          score: function() {
            return $(this).attr('data-score');
          },
          path: '/assets/'
        });
        </script>
        </td>
      </tr>
     <% end %>
    </tbody>
  </table>
 </div>
</div>
