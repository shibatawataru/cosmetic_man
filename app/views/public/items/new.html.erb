<div class="container">
 <div class="row my-3">
  <div class="col-3">
  </div>
  <div class="col-mt-9">
   <h2>商品投稿</h2>
    <%= form_with model: @item, url:public_items_path do |f| %>
    <%= f.fields_for :item_tags do |tag| %>
     <div><%= tag.collection_check_boxes :tag_id, @tags, :id, :name %></div>
    <% end %>
     <div><%= f.file_field :product_image, placeholder:"商品画像", accept: "image/*" %></div>
     <div><%= f.label :itemname, '商品名' %></div>
     <div><%= f.text_field :itemname %></div>
     <div><%= f.label :body, '商品概要' %></div>
     <div><%= f.text_area :body %></div>
     <div><%= f.label :price, '商品価格' %></div>
     <div><%= f.text_field :price %>円</div>
     <div><%= f.label :evaluation,'評価' %></div>
     <div class="form-group" id="star">
      <%= f.hidden_field :evaluation, id: :item_evaluation %>
     </div>

    <%= f.submit "新規投稿" %>
    <% end %>

  <!-- 評価javascript -->
  <script>
  $('#star').empty();
  $('#star').raty({
    size     : 36,
    starOff:  '<%= asset_path('star-off.png') %>',
    starOn : '<%= asset_path('star-on.png') %>',
    starHalf: "<%= asset_path('star-half.png') %>",

    scoreName: 'item[evaluation]]', //登録するモデル名とカラム名を記述
    half: true,
  });

  </script>
  </div>
 </div>
</div>